<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/margin_16_dp"
    android:paddingLeft="@dimen/margin_16_dp"
    android:paddingRight="@dimen/margin_16_dp"
    android:paddingStart="@dimen/margin_16_dp">

    <ImageView
        android:id="@+id/capa_image"
        android:layout_width="@dimen/image_view_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_16_dp"
        android:layout_marginStart="@dimen/margin_16_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/textColorAutor"
            android:textSize="@dimen/autor_text_size"/>

        <TextView
            android:id="@+id/titulo_livro"
            android:elegantTextHeight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:textColor="@color/textColorTitulo"
            android:textSize="@dimen/titulo_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_16_dp"
        android:layout_marginStart="@dimen/margin_16_dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/codigo_pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAllCaps="true"
            android:textColor="@color/textColorCodigoPais"
            android:textSize="@dimen/codigo_pais_text_size"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/preco_livro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/textColorPreco"
                android:textSize="@dimen/codigo_pais_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/codigo_moeda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/margin_8_dp"
                android:textColor="@color/textColorPreco"
                android:textSize="@dimen/codigo_pais_text_size"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>